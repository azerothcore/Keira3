    "highlight.js": "11.11.1",
    "husky": "9.1.7",
    "jasmine-core": "5.12.0",
    "jasmine-spec-reporter": "7.0.0",
    "jsonc-eslint-parser": "2.4.1",
    "karma": "6.4.4",
    "karma-chrome-launcher": "3.2.0",
    "karma-coverage": "2.2.1",
    "karma-coverage-istanbul-reporter": "3.0.3",
    "karma-jasmine": "5.1.0",
    "karma-jasmine-html-reporter": "2.1.0",
    "karma-time-stats-reporter": "0.1.0",
    "lint-staged": "16.2.6",
    "ngx-bootstrap": "20.0.0",
    "ngx-clipboard": "16.0.0",
    "ngx-highlightjs": "10.0.0",
    "ngx-page-object-model": "1.1.0",
    "npm-run-all2": "8.0.4",
    "nx": "21.6.6",
    "playwright": "1.56.0",
    "prettier": "3.6.2",
    "pretty-quick": "4.2.2",
    "rxjs": "7.8.2",
    "sqlstring": "2.3.3",
    "squel": "5.13.0",
    "ts-mockito": "2.6.1",
    "ts-node": "10.9.2",
    "typescript": "5.8.3",
    "wait-on": "9.0.1",
    "webdriver-manager": "13.0.2"
  },
  "optionalDependencies": {
    "@nx/nx-darwin-arm64": "20.8.2",
    "@nx/nx-darwin-x64": "20.8.2",
    "@nx/nx-linux-x64-gnu": "20.8.2",
    "@nx/nx-win32-x64-msvc": "20.8.2"
  },
  "overrides": {
    "ngx-select-ex": {
      "@angular/common": "$@angular/common",
      "@angular/core": "$@angular/core"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,ts}": [
      "npm run format-staged",
      "git add"
    ]
  }
}
