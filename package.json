    "@nx/nx-win32-x64-msvc": "20.8.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,ts}": [
      "npm run format-staged",
      "git add"
    ]
  }
}
