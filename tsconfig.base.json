{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2022",
    "useDefineForClassFields": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "module": "es2020",
    "resolveJsonModule": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "es2016", "es2015", "dom"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@keira/features/conditions": ["libs/features/conditions/src/index.ts"],
      "@keira/features/creature": ["libs/features/creature/src/index.ts"],
      "@keira/features/dashboard": ["libs/features/dashboard/src/index.ts"],
      "@keira/features/gameobject": ["libs/features/gameobject/src/index.ts"],
      "@keira/features/gossip": ["libs/features/gossip/src/index.ts"],
      "@keira/features/item": ["libs/features/item/src/index.ts"],
      "@keira/features/other-loots": ["libs/features/other-loots/src/index.ts"],
      "@keira/features/quest": ["libs/features/quest/src/index.ts"],
      "@keira/features/smart-scripts": ["libs/features/smart-scripts/src/index.ts"],
      "@keira/features/spell": ["libs/features/spell/src/index.ts"],
      "@keira/features/sql-editor": ["libs/features/sql-editor/src/index.ts"],
      "@keira/features/texts": ["libs/features/texts/src/index.ts"],
      "@keira/main/connection-window": ["libs/main/connection-window/src/index.ts"],
      "@keira/main/main-window": ["libs/main/main-window/src/index.ts"],
      "@keira/shared/acore-world-model": ["libs/shared/acore-world-model/src/index.ts"],
      "@keira/shared/base-abstract-classes": ["libs/shared/base-abstract-classes/src/index.ts"],
      "@keira/shared/base-editor-components": ["libs/shared/base-editor-components/src/index.ts"],
      "@keira/shared/common-services": ["libs/shared/common-services/src/index.ts"],
      "@keira/shared/config": ["libs/shared/config/src/index.ts"],
      "@keira/shared/constants": ["libs/shared/constants/src/index.ts"],
      "@keira/shared/db-layer": ["libs/shared/db-layer/src/index.ts"],
      "@keira/shared/login-config": ["libs/shared/login-config/src/index.ts"],
      "@keira/shared/loot-editor": ["libs/shared/loot-editor/src/index.ts"],
      "@keira/shared/model-3d-viewer": ["libs/shared/model-3d-viewer/src/index.ts"],
      "@keira/shared/preview": ["libs/shared/preview/src/index.ts"],
      "@keira/shared/sai-editor": ["libs/shared/sai-editor/src/index.ts"],
      "@keira/shared/selectors": ["libs/shared/selectors/src/index.ts"],
      "@keira/shared/switch-language": ["libs/shared/switch-language/src/index.ts"],
      "@keira/shared/test-utils": ["libs/shared/test-utils/src/index.ts"],
      "@keira/shared/utils": ["libs/shared/utils/src/index.ts"],
      "texts": ["libs/features/texts/src/index.ts"]
    },
    "rootDir": "."
  },
  "include": ["main.ts"],
  "exclude": ["node_modules", "tmp"],
  "angularCompilerOptions": {
    "strictTemplates": true,
    "strictInjectionParameters": true
  }
}
